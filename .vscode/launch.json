// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension: pnpm-vscode-helper",
      "type": "extensionHost",
      "request": "launch",
      "program": "${workspaceFolder}\\packages\\pnpm-vscode-helper\\src\\index.js",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/pnpm-vscode-helper"
      ],
      "outFiles": ["${workspaceFolder}/packages/pnpm-vscode-helper/**/*.js"]
    },
    {
      "name": "Run Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/pnpm-vscode-helper",
        "--extensionTestsPath=${workspaceFolder}/packages/pnpm-vscode-helper/test/suite/index"
      ],
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"]
    }
  ]
}
