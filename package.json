{
  "name": "pnpm-vscode-helper",
  "displayName": "pnpm-vscode-helper",
  "description": "vscode extension for pnpm and pnpm workspace",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:pnpm-workspace.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pnpm-vscode-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "pnpm-vscode-helper.toggleLocale",
        "title": "Toggle Locale(切换语言)"
      },
      {
        "command": "pnpm-vscode-helper.startTask",
        "title": "Show Progress"
      },
      {
        "title": "Enable CodeLens",
        "command": "pnpm-vscode-helper.enableCodeLens",
        "category": "PNPM CodeLens Sample"
      },
      {
        "title": "Disable Codelens",
        "command": "pnpm-vscode-helper.disableCodeLens",
        "category": "PNPM CodeLens Sample"
      },
      {
        "title": "Toggle Workspace Featrue Status",
        "command": "pnpm-vscode-helper.toggleWorkspaceFeature"
      },
      {
        "title": "Sync Project Workspace Info",
        "command": "pnpm-vscode-helper.scan-workspace",
        "category": "PNPM W Sample"
      }
    ],
    "configuration": {
      "properties": {
        "pnpm-vscode-helper.enableCodeLens": {
          "type": "boolean",
          "default": true
        },
        "pnpm-vscode-helper.locale": {
          "type": "string",
          "default": "en-US"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.180",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "type-fest": "^2.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "rc-parser": "^1.0.2"
  }
}
