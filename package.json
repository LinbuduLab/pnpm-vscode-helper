{
  "name": "pnpm-vscode-helper",
  "displayName": "pnpm-vscode-helper",
  "description": "vscode extension for pnpm and pnpm workspace",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:pnpm-vscode-helper.helloWorld",
    "onCommand:pnpm-vscode-helper.toggleLocale",
    "onCommand:pnpm-vscode-helper.startTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pnpm-vscode-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "pnpm-vscode-helper.toggleLocale",
        "title": "Toggle Locale(切换语言)"
      },
      {
        "command": "pnpm-vscode-helper.startTask",
        "title": "Show Progress"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.65.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2"
  }
}
