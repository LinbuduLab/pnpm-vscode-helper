{
  "name": "pnpm-vscode-helper",
  "displayName": "pnpm-vscode-helper",
  "description": "vscode extension for pnpm and pnpm workspace",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:pnpm-workspace.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "terminal": {
      "profiles": [
        {
          "id": "terminalTest.terminal-profile",
          "icon": "terminal",
          "title": "Terminal API Profile"
        }
      ]
    },
    "commands": [
      {
        "command": "terminalTest.createAndSend",
        "title": "Terminal API: Create Terminal and Immediately Send"
      },
      {
        "command": "pnpm-vscode-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "pnpm-vscode-helper.install-workspace-root-deps",
        "title": "Install workspace root dependencies only"
      },
      {
        "command": "pnpm-vscode-helper.install-selected-packages-deps",
        "title": "Install selected package dependencies only"
      },
      {
        "command": "pnpm-vscode-helper.toggleLocale",
        "title": "Toggle Locale(切换语言)"
      },
      {
        "command": "pnpm-vscode-helper.startTask",
        "title": "Show Progress"
      },
      {
        "title": "Enable CodeLens",
        "command": "pnpm-vscode-helper.enableCodeLens",
        "category": "PNPM CodeLens Sample"
      },
      {
        "title": "Disable Codelens",
        "command": "pnpm-vscode-helper.disableCodeLens",
        "category": "PNPM CodeLens Sample"
      },
      {
        "title": "Toggle Workspace Featrue Status",
        "command": "pnpm-vscode-helper.toggleWorkspaceFeature"
      },
      {
        "title": "Sync Project Workspace Info",
        "command": "pnpm-vscode-helper.scan-workspace",
        "category": "PNPM W Sample"
      },
      {
        "title": "Create .npmrc config with pnpm configuration",
        "command": "pnpm-vscode-helper.create-npm-rc-config",
        "category": "PNPM W Sample"
      },
      {
        "title": "Create pnpm-workspace.yaml config with pnpm configuration",
        "command": "pnpm-vscode-helper.create-pnpm-workspace-config",
        "category": "PNPM W Sample"
      },
      {
        "title": "Select workspace packages",
        "command": "pnpm-vscode-helper.select-workspace-package",
        "category": "PNPM W Sample"
      }
    ],
    "configuration": {
      "properties": {
        "pnpm-vscode-helper.enableCodeLens": {
          "type": "boolean",
          "default": true
        },
        "pnpm-vscode-helper.locale": {
          "type": "string",
          "default": "en-US"
        },
        "pnpm-vscode-helper.shamefullyHoist": {
          "type": "boolean",
          "default": false
        },
        "pnpm-vscode-helper.workspacePackages": {
          "type": "object",
          "default": {}
        },
        "pnpm-vscode-helper.privateExtConfig": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "default": ""
            },
            "email": {
              "type": "string",
              "default": ""
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/ini": "^1.3.31",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.180",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "type-fest": "^2.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "globby": "^11.0.3",
    "ini": "^2.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "rc-parser": "^1.0.2"
  }
}
